<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jarvislin.producepricechecker.activity.CustomerBookmarkActivity"
    android:background="@color/light_grey"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/actionbar_back"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:theme="@style/ToolBarStyle">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/press_effect_with_alpha"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/back"
                style="@style/ActionBarImage"
                android:src="@drawable/ic_action_back"
                android:layout_alignParentLeft="true"
                android:background="@drawable/press_effect_with_alpha"/>

            <TextView
                style="@style/ActionBarTitle"
                android:text="@string/my_list" />

            <ImageView
                android:id="@+id/edit"
                style="@style/ActionBarImage"
                android:src="@drawable/ic_delete"
                android:layout_alignParentRight="true"
                android:background="@drawable/press_effect_with_alpha"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main_blue"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="19sp"
                style="@style/TableHeader"
                android:text="品種\n名稱"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="19sp"
                style="@style/TableHeader"
                android:text="平均價格區間\n資料日期"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/bookmark_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>
