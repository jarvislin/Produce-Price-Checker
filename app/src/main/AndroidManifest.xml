<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jarvislin.producepricechecker" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/tomato"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/MyAppTheme" >
        <activity
            android:name=".activity.IndexActivity_"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MerchantActivity_"
            android:label="@string/title_activity_data_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base" >
        </activity>
        <activity
            android:name=".activity.CustomerActivity_"
            android:label="@string/title_activity_data_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base" >
        </activity>
        <activity
            android:name=".activity.SettingsActivity_"
            android:label="@string/setting"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" >
        </activity>
        <activity
            android:name=".activity.CustomerBookmarkActivity_"
            android:label="@string/my_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base">
        </activity>
        <activity
            android:name=".activity.MerchantBookmarkActivity_"
            android:label="@string/my_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base">
        </activity>
        <activity
            android:name=".activity.ChartActivity_"
            android:label="chart"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base">
        </activity>
    </application>

</manifest>
